<div class="container">
  <h2 class="my-4">Recent Posts</h2>
  <div class="row">
    {{#each posts as |post|}}
    
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="post-title">{{post.title}}</h5>
            <p class="post-author-id">Author: {{post.author_username}}</p>
            <p class="post-content">{{post.content}}</p>
            <a href="#" class="btn btn-primary">View Comments</a>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
</div>